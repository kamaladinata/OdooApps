<?xml version="1.0"?>
<odoo>
    <record id="document_helpdesk_form_view" model="ir.ui.view">
		<field name="name">document.helpdesk.form.view</field>
		<field name="model">document.helpdesk</field>
		<field name="arch" type="xml">
			<form string="Document Helpdesk">
				<sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="description" placeholder="e.g Document Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
							<field name="helpdesk_id" required="1"/>
							<field name="name" invisible="1"/>
                            <field name="attachment" filename="name"/>
						</group>
                    </group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="document_helpdesk_tree_view" model="ir.ui.view">
		<field name="name">document.helpdesk.tree.view</field>
		<field name="model">document.helpdesk</field>
		<field name="arch" type="xml">
			<tree string="Document Helpdesk">
				<field name="description"/>
                <field name="helpdesk_id"/>
                <field name="name"/>
			</tree>
		</field>
	</record>

	<record id="document_helpdesk_action" model="ir.actions.act_window">
		<field name="name">Document Helpdesk</field>
		<field name="res_model">document.helpdesk</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">Create the first Document Helpdesk</p>
		</field>
	</record>

    <menuitem id="website_document_helpdesk_menu"
        name="Document Helpdesk"
        sequence="70"
        parent="website.menu_website_configuration"/>
	
	<menuitem id="menu_document_helpdesk"
        action="document_helpdesk_action"
        name="Document Helpdesk" 
        parent="website_document_helpdesk_menu"
        sequence="1"/>

</odoo>
